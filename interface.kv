<DefButton>
    size: 130,50
    background_color: (0,1,1,0)
    #background_normal: ''
    canvas:

        Color:
            rgb: (3/255.0, 218/255.0, 197/255.0)

        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [26]

            Label:
                id: my_label
                Color:
                    rgb:(0,0,0)

    canvas.before:

        Color:
            rgb: (0/255.0, 201/255.0, 182/255.0)

        RoundedRectangle:
            size: self.width + 5 , self.height + 5
            pos: self.x - 5, self.y - 5
            radius: [26]

<Ring>
    id: niewiem
    canvas.before:

        Color:
            rgb: (1,0,0)

        Ellipse:
            angle_start: -90
            angle_end: 90
            size: 120, 120
            pos: self.pos

    canvas:

        Color:
            rgb: (0,1,0)

        Ellipse:
            angle_start: -60
            angle_end: 60
            size: 120, 120
            pos: self.pos

    canvas.after:

        Color:
            rgb: (98/255.0, 0, 220/255.0)

        Ellipse:
            size: 100, 100
            pos: self.x + 10, self.y + 10

        Color:
            rgba: (0,0,0,0.5)

        Ellipse:
            size: 120, 120
            pos: self.pos
            angle_start: self.i
            angle_end: self.i +2

<LED>
    canvas:

        Color:
            rgb: (69/255.0,69/255.0,69/255.0) if self.SelectedLED else (88/255.0, 255/255.0, 51/255.0)

        Ellipse:
            size: (10,10)
            pos: self.x, self.y

    canvas.before:

        Color:
            rgb: (0,0,0)

        Ellipse:
            size:(14,14)
            pos: self.x -2, self.y-2

<Interface>:
    canvas:

        Color:
            rgb: (98/255.0, 0, 220/255.0)

        Rectangle:
            pos: self.pos
            size: self.size

    GridLayout:
        rows: 2
        cols: 2
        size: 350,150
        spacing: 10
        padding: 15

        canvas:

            Color:
                rgb: (98/255.0, 0, 238/255.0)

            RoundedRectangle:
                size: self.width, self.height
                pos: self.x, self.y
                radius: [30]

        DefButton:
            id: button1
            markup: True
            border: 30,30,30,30
            border_color: '[color=000000]'

<GuzikWyglad>
    background_color: (214/255.0, 222/255.0, 213/255.0)
    background_normal: ''
    canvas:
        Color:
            rgb: (0,0,1) if self.selected else (0.2, 0.7, 0,9)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [26]

<LED>
    canvas:
        Color:
            rgb: (69/255.0,69/255.0,69/255.0) if self.ledzik else (88/255.0, 255/255.0, 51/255.0)
        Ellipse:
            size: (10,10)
            pos: self.x, self.y

<Interface>:
    canvas:
        Color:
            rgb: (0.9, 0.9, 0.9)
        Rectangle:
            size: self.width, self.height
            pos: self.x, self.y
    BoxLayout:
        size_hint: None, None
        size: 500, 100
        spacing: 45
        padding: 4,4,4,4
        canvas.before:
            Color:
                rgb: (214/255.0, 222/255.0, 213/255.0)
            Rectangle:
                size: self.width, self.height
                pos: self.x, self.y
        GuzikWyglad:

            id: naszguzik
            on_release: root.guzik_click()

        GuzikWyglad:

            id: naszguzik2
            on_release: root.guzik_click2()
        GuzikWyglad:

            id: naszguzik3
            on_release: root.guzik_click3()

    GridLayout:
        rows: 2
        cols: 3
        size: 100, 60
        spacing: 20
        padding: 10
        pos: root.width - 120, root.height - 70
        canvas.before:
            Color:
                rgb: (214/255.0, 222/255.0, 213/255.0)
            Rectangle:
                size: self.width, self.height
                pos: self.x, self.y
        LED:
            id: led1
        LED:
            id: led2
        LED:
            id: led3
        LED:
            id: led4
        LED:
            id: led5
        Button:
            id: naszguzikLED
            on_release: root.guzik_clickLED()



<GuzikWyglad>
    canvas:
        Color:
            rgb: (0,0,1) if self.selected else (0.2, 0.7, 0,9)
        Rectangle:
            size: self.width, self.height
            pos: self.x, self.y

<Interface>:
    canvas:
        Color:
            rgb: (1,0,1)
        Rectangle:
            size: self.width, self.height
            pos: self.x, self.y
    GuzikWyglad:
        id: naszguzik
        on_release: root.guzik_click()
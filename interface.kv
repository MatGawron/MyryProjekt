<DefButton>
    size: 130,50
    background_color: (0,1,1,0)
    #background_normal: ''
    canvas:
        Color:
            rgb: (3/255.0, 218/255.0, 197/255.0)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [26]
    canvas.before:
        Color:
            rgb: (0/255.0, 201/255.0, 182/255.0)
        RoundedRectangle:
            size: self.width + 5 , self.height + 5
            pos: self.x - 5, self.y - 5
            radius: [26]

<LED>
    canvas:
        Color:
            rgb: (69/255.0,69/255.0,69/255.0) if self.SelectedLED else (88/255.0, 255/255.0, 51/255.0)
        Ellipse:
            size: (10,10)
            pos: self.x, self.y
    canvas.before:
        Color:
            rgb: (0,0,0)
        Ellipse:
            size:(14,14)
            pos: self.x -2, self.y-2

<Interface>:
    canvas:
        Color:
            rgb: (98/255.0, 0, 220/255.0)
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        rows: 2
        cols: 2
        size: 350,150
        spacing: 10
        padding: 15
        canvas:
            Color:
                rgb: (98/255.0, 0, 238/255.0)
            RoundedRectangle:
                size: self.width, self.height
                pos: self.x, self.y
                radius: [30]
        DefButton:
            id: button1
            text: '[color=000000]Tak[/color]'
            markup: True
            border: 30,30,30,30
            border_color: '[color=000000]'
            on_release: root.ButtonClick1()
            size_hint:(1, .3)
            LED:
                id:buttonLED1
                pos_hint: button1.x ,button1.y

        DefButton:
            id: button2
            text: '[color=000000]Nie[/color]'
            markup: True
            on_release: root.ButtonClick2()
            LED:
                id:buttonLED2
                pos: button2.x + 10,button2.y + 20

        DefButton:
            id: button3
            text: '[color=000000]Kaczucha[/color]'
            markup: True
            on_release: root.ButtonClick3()
            LED:
                id:buttonLED3
                pos: button3.x + 10,button3.y + 20



    GridLayout:
        rows: 2
        cols: 3
        size: 100, 60
        spacing: 20
        padding: 10
        pos: root.width - 120, root.height - 70
        canvas.before:
            Color:
                rgb: (90/255.0, 2/255.0, 219/255.0)
            RoundedRectangle:
                size: self.width, self.height
                pos: self.x, self.y
                radius: [20]
        LED:
            id: led1
        LED:
            id: led2
        LED:
            id: led3
        LED:
            id: led4
        LED:
            id: led5
        DefButton:
            id: ButtonRNDM
            on_release: root.ButtonClickLED()


